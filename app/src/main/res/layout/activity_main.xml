<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20.0dip"
        tools:context=".activity.MainActivity">


    <ImageView
            android:id="@+id/iv_title"
            android:layout_width="100dp"
               android:layout_margin="32dp"
               android:layout_gravity="center"
               android:src="@mipmap/ic_title"
            android:scaleType="fitXY"
               android:layout_height="100dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_btn2"
            android:orientation="vertical">

        <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/background_title"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:visibility="visible"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hint"/>

        <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="32dp">

            <LinearLayout
                    android:layout_marginTop="16dp"

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                <View android:layout_width="4dp"

                      android:layout_marginRight="8dp"
                      android:background="@color/bg_text"
                      android:layout_height="match_parent"/>

                <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分局："
                        android:textSize="18sp"
                        android:textColor="@color/bg_text"/>

                <TextView
                        android:layout_marginLeft="8dp"

                        android:textSize="18sp"

                        android:id="@+id/tv_fj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="顺城分局"
                        android:textColor="@color/bg_text"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                <View android:layout_width="4dp"

                      android:layout_marginRight="8dp"
                      android:background="@color/bg_text"
                      android:layout_height="match_parent"/>

                <TextView
                        android:layout_marginLeft="8dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="派出所："
                        android:textSize="18sp"
                        android:textColor="@color/bg_text"/>

                <TextView
                        android:textSize="18sp"

                        android:id="@+id/tv_pcs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="顺城派出所"
                        android:textColor="@color/bg_text"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="16dp"

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                <View android:layout_width="4dp"

                      android:layout_marginRight="8dp"
                      android:background="@color/bg_text"
                      android:layout_height="match_parent"/>

                <TextView
                        android:layout_marginLeft="8dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="责任区："
                        android:textSize="18sp"
                        android:textColor="@color/bg_text"/>

                <TextView
                        android:layout_marginLeft="8dp"

                        android:textSize="18sp"

                        android:id="@+id/tv_zrq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="XX责任区"
                        android:textColor="@color/bg_text"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                <View android:layout_width="4dp"

                      android:layout_marginRight="8dp"
                      android:background="@color/bg_text"
                      android:layout_height="match_parent"/>

                <TextView
                        android:layout_marginLeft="8dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="警员："
                        android:textSize="18sp"
                        android:textColor="@color/bg_text"/>

                <TextView
                        android:layout_marginLeft="8dp"

                        android:textSize="18sp"
                        android:id="@+id/tv_jy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="张某某"
                        android:textColor="@color/bg_text"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/ll_camera"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:gravity="center"
                android:background="@drawable/background_btn3"
                android:orientation="horizontal"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/camera"/>

            <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="拍照寻人"/>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/ll_note"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/background_btn4"
                android:orientation="horizontal"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/note"/>

            <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="工作记录"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>